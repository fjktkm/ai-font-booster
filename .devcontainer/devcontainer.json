{
	"name": "Electron and Python",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"runArgs": [
		"--rm",
		"-v",
		"/workspaces/ai-font-booster/frontend/node_modules",
		"-v",
		"/workspaces/ai-font-booster/.venv"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"ms-python.python",
				"ms-python.black-formatter",
				"ms-toolsai.jupyter",
				"dbaeumer.vscode-eslint",
				"mhutchie.git-graph"
			]
		}
	},
	"postCreateCommand": "python3 -m venv .venv && . .venv/bin/activate && pip install -r requirements.txt && cd frontend && yarn install",
	"postStartCommand": "/etc/init.d/dbus start"
}